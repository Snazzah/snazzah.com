---
export interface Props {
  title?: string;
  color: string;
}

const { title, color } = Astro.props;
---

<div class:list={[color, 'sm:rounded-xl overflow-hidden']}>
  {title && <h3 class="text-2xl lg:text-3xl py-4 px-6 font-bold text-center filter drop-shadow-txt">{title}</h3>}
  <slot />
</div>
<style lang="sass">
  .drop-shadow-txt
    --tw-drop-shadow: drop-shadow(0 3px 1px rgba(0, 0, 0, 0.5)) drop-shadow(0 4px 3px rgba(0, 0, 0, 0.1))
</style>
